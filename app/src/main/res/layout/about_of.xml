<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutOf">

    <include
        android:id="@+id/actionBarAbout"
        layout="@layout/action_bar" />

    <TextView
        android:id="@+id/tViewDeveloperName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_constrain"
        android:paddingTop="?attr/actionBarSize"
        android:text="@string/developer_name"
        android:textStyle="bold"
        android:theme="@style/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/actionBarAbout" />

    <TextView
        android:id="@+id/tViewDeveloperDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_constrain"
        android:text="@string/developer_description"
        android:theme="@style/content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tViewDeveloperName" />

</androidx.constraintlayout.widget.ConstraintLayout>